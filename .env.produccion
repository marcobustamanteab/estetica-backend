# Django Settings
SECRET_KEY=your-super-secret-production-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,estetica-backend-production.up.railway.app

# Database Settings (Railway PostgreSQL)
# Railway provides DATABASE_URL automatically, but you can override these if needed
DB_ENGINE=django.db.backends.postgresql
DATABASE_URL=${DATABASE_URL}

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://estetica-frontend-production.up.railway.app

# CSRF Settings
CSRF_TRUSTED_ORIGINS=https://*.railway.app,https://estetica-backend-production.up.railway.app,https://your-frontend-domain.com